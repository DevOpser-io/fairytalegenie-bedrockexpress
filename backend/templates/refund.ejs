  }
  
  .refund-table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0;
    background: #f8f9fa;
    border-radius: 8px;
    overflow: hidden;
  }
  
  .refund-table th {
    background: #667eea;
    color: white;
    padding: 12px;
    text-align: left;
    font-weight: 600;
  }
  
  .refund-table td {
    padding: 12px;
    border-bottom: 1px solid #dee2e6;
    color: #34495e;
  }
  
  .refund-table tr:last-child td {
    border-bottom: none;
  }
  
  .process-steps {
    background: #e3f2fd;
    border-radius: 8px;
    padding: 20px;
    margin: 30px 0;
  }
  
  .process-steps h3 {
    color: #1565c0;
    margin-top: 0;
  }
  
  .process-steps ol {
    color: #1565c0;
    margin: 16px 0;

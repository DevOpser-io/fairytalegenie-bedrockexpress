  }
  
  .refund-header {
    text-align: center;
    margin-bottom: 40px;
    padding-bottom: 20px;
    border-bottom: 3px solid #e3f2fd;
  }
  
  .refund-header h1 {
    color: #2c3e50;
    font-size: 2.5rem;
    margin-bottom: 8px;
  }
  
  .last-updated {
    color: #7f8c8d;
    font-style: italic;
    font-size: 0.9rem;
  }
  
  .refund-content h2 {
    color: #34495e;
    font-size: 1.5rem;
    margin-top: 30px;
    margin-bottom: 16px;
    border-left: 4px solid #667eea;
    padding-left: 16px;
  }
  
  .refund-content h3 {
    color: #2c3e50;
    font-size: 1.2rem;
    margin-top: 24px;
    margin-bottom: 12px;
  }
  
  .refund-content p {
    color: #34495e;
    margin-bottom: 16px;
    text-align: justify;
  }
  
  .refund-content ul {
    margin: 16px 0;
    padding-left: 20px;
  }
  
  .refund-content li {
    color: #34495e;
    margin-bottom: 8px;
  }
  
  .policy-highlight {
    background: #e8f5e8;
    border: 2px solid #4caf50;
    border-radius: 8px;
    padding: 20px;
    margin: 30px 0;
  }
  
  .policy-highlight h3 {
    color: #2e7d32;

<% title = 'Thank You' %>
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
<link rel="stylesheet" href="/static/auth.css">
<%- include('./partials/favicon') %>

<style nonce="<%= cspNonce %>">
  .thank-you-container {
    max-width: 600px;
    margin: 40px auto;
    padding: 40px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    text-align: center;
  }
  
  .thank-you-header {
    margin-bottom: 30px;
  }
  
  .thank-you-header h1 {
    color: #2c3e50;
    font-size: 2.5rem;
    margin-bottom: 16px;
  }
  
  .success-message {
    background: #e8f5e8;
    border: 2px solid #4caf50;
    border-radius: 8px;
    padding: 25px;
    margin: 30px 0;
    color: #2e7d32;
  }
  
  .success-message h3 {
    color: #2e7d32;
    margin-top: 0;
    margin-bottom: 15px;
  }
  
  .next-steps {
    background: #e3f2fd;
    border-radius: 8px;
    padding: 20px;
    margin: 30px 0;
    text-align: left;
  }
  
  .next-steps h3 {
    color: #1565c0;
    margin-top: 0;
  }
  
  .next-steps ul {
    color: #1565c0;
    margin: 16px 0;
    padding-left: 20px;
  }
  
  .next-steps li {
    margin-bottom: 8px;
    line-height: 1.5;
  }
  
  .cta-button {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 16px 32px;
    border: none;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    margin: 20px 10px;
  }
  
  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    color: white;
    text-decoration: none;
  }
  
  .secondary-button {
    background: transparent;
    color: #667eea;
    border: 2px solid #667eea;
  }
  
  .secondary-button:hover {
    background: #667eea;
    color: white;
  }
  
  .social-follow {
    margin: 30px 0;
    padding: 20px;
    background: #f8f9fa;
    border-radius: 8px;
  }
  
  .auth-links {
    text-align: center;
    margin-top: 40px;
    padding-top: 20px;
    border-top: 1px solid #ecf0f1;
  }
  
  .auth-links a {
    color: #667eea;
    text-decoration: none;
    margin: 0 15px;
  }
  
  .auth-links a:hover {
    text-decoration: underline;
  }
  
  /* Utility classes for inline styles */
  .contact-title {
    color: #495057;
    margin-top: 0;
  }
  
  .contact-text {
    color: #6c757d;
    margin-bottom: 15px;
  }
  
  .contact-info {
    color: #495057;
    font-weight: 600;
  }
  
  .email-link {
    color: #667eea;
  }
  
  .button-container {
    margin: 30px 0;
  }
  
  .development-box {
    background: #fff3cd;
    border: 2px solid #ffeaa7;
    border-radius: 8px;
    padding: 20px;
    margin: 30px 0;
  }
  
  .development-title {
    color: #856404;
    margin-top: 0;
  }
  
  .development-text {
    color: #856404;
    margin-bottom: 0;
  }
  
  @media (max-width: 768px) {
    .thank-you-container {
      margin: 10px;
      padding: 20px;
      border-radius: 8px;
    }
    
    .thank-you-header h1 {
      font-size: 1.8rem;
      line-height: 1.2;
    }
    
    .cta-button {
      display: block;
      margin: 10px 0;
      text-align: center;
      width: 100%;
      box-sizing: border-box;
      padding: 14px 20px;
      font-size: 1rem;
    }
    
    .success-message,
    .next-steps,
    .social-follow {
      padding: 15px;
      margin: 20px 0;
    }
    
    .next-steps ul {
      padding-left: 15px;
    }
    
    .auth-links {
      font-size: 0.9rem;
    }
    
    .auth-links a {
      display: inline-block;
      margin: 5px 10px;
    }
  }
  
  @media (max-width: 480px) {
    .thank-you-container {
      margin: 5px;
      padding: 15px;
    }
    
    .thank-you-header h1 {
      font-size: 1.5rem;
    }
    
    .success-message h3,
    .next-steps h3,
    .social-follow h3 {
      font-size: 1.1rem;
    }
    
    .cta-button {
      padding: 12px 16px;
      font-size: 0.95rem;
    }
    
    .auth-links a {
      display: block;
      margin: 8px 0;
      text-align: center;
    }
  }
</style>

